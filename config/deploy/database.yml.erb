
base: &base
  adapter: postgresql
  encoding: unicode
  pool: 5
  min_messages: WARNING
  username: <%= Capistrano::CLI.password_prompt("Enter PostgreSQL username: ") %>
  password: <%= Capistrano::CLI.password_prompt("Enter PostgreSQL password: ") %>

development:
  database: <%= application %>_development
  <<: *base

production:
  database: <%= application %>_production
  <<: *base

test:
  database: <%= application %>_test
  <<: *base

