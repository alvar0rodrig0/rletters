source 'http://rubygems.org'

gem 'rails', '~> 3.1'

# JSON (much faster than the Rails default)
gem "json"

# Assets
gem "haml"
group :assets do
  gem "sass"
  gem "sass-rails"
  
  gem 'execjs'
  gem 'therubyracer'
  gem 'uglifier'
  gem 'yui-compressor'
end

# Solr
gem "rsolr"

# Markdown
gem "maruku"

# JQuery
gem "jquery-rails"

# Citation processor for formatting
gem "citeproc-ruby"

# Various output formats: MARC, XML, etc.
gem "marc"
gem "builder"
gem "rdf"
gem "rdf-raptor"

# Rubyzip for creating export ZIP files
gem "rubyzip"

