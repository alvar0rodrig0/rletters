source 'http://rubygems.org'

gem 'rails', '~> 3.1'

# JSON (much faster than the Rails default)
gem "json"

# HAML
gem "sass"
gem "sass-rails"
gem "haml"

# Solr
gem "rsolr"

# Markdown
gem "maruku"

# JQuery
gem "jquery-rails"

# Citation processor for formatting
gem "citeproc-ruby"

# Various output formats: MARC, XML, etc.
gem "marc"
gem "builder"
gem "rdf"
gem "rdf-raptor"

# Rubyzip for creating export ZIP files
gem "rubyzip"

