source 'http://rubygems.org'

gem 'rails', '3.0.7'

# Various i18n gems
gem "translate_routes"

# JSON (much faster than the Rails default)
gem "json"

# Compass and HAML
gem "compass", ">= 0.10.6"
gem "haml"

# Solr
gem "rsolr"
gem "rsolr-ext"

# Markdown
gem "maruku"

# JQuery
gem "jquery-rails"

# Citation processor for formatting
gem "citeproc-ruby"

# Various output formats: MARC, XML, etc.
gem "marc"
gem "builder"
gem "rdf"
gem "rdf-raptor"

# Rubyzip for creating export ZIP files
gem "rubyzip"

