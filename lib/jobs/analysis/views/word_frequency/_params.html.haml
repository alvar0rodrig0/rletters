- content_for :javascript do
  = javascript_include_tag 'compute_word_frequencies'

.row
  .large-6.columns
    = simple_form_for :job_params, url: dataset_analysis_tasks_path(@dataset, class: 'WordFrequency'), method: :post do |f|
      = f.error_notification

      = render_job_partial Jobs::Analysis::WordFrequency, 'compute_word_frequencies', locals: { f: f }
      = f.button :submit
      = link_to(t('common.cancel'), @dataset, class: 'button secondary')
