- data = YAML.load(@task.result.file_contents(:original))
- dates = data[:data]
- percent = data[:percent]

%div.center
  %h1= @dataset.name

  - if percent
    %h2== Percentage of documents in #{data[:normalization_set]} found in the #{@dataset.name} dataset, plotted by year
  - else
    %h2 Number of documents, plotted by year

  .verticalpad

  %div.plot_dates_data= dates.to_json
  %div.plot_dates_percent= percent ? 'true' : 'false'

  %div.plot_dates_graph

  .verticalpad

  %div.plot_dates_table

  = link_to 'Download in CSV format', { controller: 'datasets', action: 'task_view', id: @dataset.to_param, task_id: @task.to_param, view: 'download', format: 'csv' }, rel: 'external', data: { role: 'button', icon: 'bars', inline: 'true' }
