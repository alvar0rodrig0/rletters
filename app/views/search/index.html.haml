%div.leftcolumn
  %ul{ 'data-role' => 'listview', 'data-theme' => 'd', 'data-divider-theme' => 'b' }
    %li{ 'data-role' => 'list-divider' }= num_results_string
    %li.search
      = form_tag(search_path, :method => :get, 'data-transition' => 'none') do
        = search_field_tag :q, (params[:precise] ? "(advanced search)" : params[:q]), :placeholder => "Search for articles..."
    - @documents.each do |d|
      %li
        %h3= d.title
        %p= d.journal

%div.rightcolumn
  %ul{ 'data-role' => 'listview', 'data-theme' => 'd', 'data-divider-theme' => 'b' }
    %li{ 'data-role' => 'list-divider' } Analyze these results
    
    -# If the user isn't logged in or doesn't have any datasets, make this yellow
    - if session[:user].nil?
      %li{ 'data-theme' => 'e' }= link_to "Log in to analyze results!", users_path
    - else
      %li= link_to 'Create dataset from search', '#'
  %div.verticalpad

  %ul{ 'data-role' => 'listview', 'data-theme' => 'd', 'data-divider-theme' => 'b' }
    %li{ 'data-role' => 'list-divider' }= t('search.filters')
  %div.verticalpad
  %ul{ 'data-role' => 'listview', 'data-theme' => 'd', 'data-divider-theme' => 'c' }
    = facet_link_list
