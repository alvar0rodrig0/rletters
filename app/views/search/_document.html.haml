%h5
  - if document.title
    = document.title
  - else
    = t('.untitled')

  - if document.fulltext_url
    %span.icon.fi-upload-cloud.has-tip{ data: { tooltip: true }, title: t('.cloud_tooltip') }
%p
  - if document.authors
    = document.authors
    = ' | '
  - if document.journal
    %em= "#{document.journal}, "
  - if document.volume
    = t('.volume_abbr', volume: document.volume) + ','
  - if document.number
    = t('.number_abbr', number: document.number)
  - if document.year
    = "(#{document.year}),"
  - if document.pages
    = t('.pages_abbr', pages: document.pages)
