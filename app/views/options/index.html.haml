- title t :'options.header'

%h2= t :'options.header'

%div.verticalpad

%h3= t :'options.locale_header'

= form_tag options_path(:action => :locale) do
  %div{ :'data-role' => :fieldcontain }
    = label_tag :locale do
      %span= t :'options.locale_label'
      = help_button :'help.options.languages_markdown'
    - locale = I18n.locale
    - locale ||= I18n.default_locale
    = select_tag :locale, options_for_select(Hash[*APP_CONFIG['available_locales'].sort {|a,b| locale_name(a)<=>locale_name(b)}.collect {|l| [locale_name(l), l]}.flatten], locale), :'data-native-menu' => :false, :class => :localeselect
  = link_to t(:'options.locale_button'), "javascript:localeRedirect('#{I18n.default_locale}');", :'data-role' => :button

%div.verticalpad

%h3= t :'options.session_header'

= form_tag options_path(:action => :setsession) do
  %div{ :'data-role' => :fieldcontain }
    = field_set_tag t(:'options.per_page_label'), 'data-role' => 'controlgroup', 'data-type' => 'horizontal' do
      = radio_button_tag(:perpage, '10', (session[:perpage].nil? || session[:perpage] == '10'), :id => :perpage)
      = label_tag(:perpage, '10')
      = radio_button_tag(:perpage, '25', (session[:perpage] == '25'), :id => :perpage_twofive)
      = label_tag(:perpage_twofive, '25')
      = radio_button_tag(:perpage, '50', (session[:perpage] == '50'), :id => :perpage_fifty)
      = label_tag(:perpage_fifty, '50')
      = radio_button_tag(:perpage, '100', (session[:perpage] == '100'), :id => :perpage_hund)
      = label_tag(:perpage_hund, '100')
  = submit_tag t :'options.save_button'
