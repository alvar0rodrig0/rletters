#login-dropdown
  -# We're not using simple_form_for here, because I want precise control over
  -# the layout of this inline form.
  = form_for(:user, url: user_session_path) do |f|

    .row
      .login-label= f.label :email, class: 'right inline'
      .login-control= f.email_field :email
    .row
      .login-label= f.label :password, class: 'right inline'
      .login-control= f.password_field :password
    .row
      .login-shift
        = f.check_box :remember_me
        = f.label :remember_me

    .row
      .login-shift
        %small= link_to t('layouts.sign_in.forgot_password'), new_user_password_path

    .row
      .login-submit= f.submit t('layouts.sign_in.sign_in'), class: 'button primary small expand'

    .row
      .login-shift= link_to t('layouts.sign_in.sign_up'), new_user_registration_path, class: 'button success small expand'
