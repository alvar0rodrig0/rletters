%div{ :class => (@no_searchbar ? 'nosearchbar' : 'headercontainer') }
  %h1.ui-title= APP_CONFIG['app_name']
  
  %div.controls
    %div.buttons{ 'data-inline' => 'true' }
      - unless request.env["HTTP_REFERER"].blank?
        = link_to t(:'header.back_button'), :back, 'data-role' => 'button', 'data-icon' => 'arrow-l', 'data-transition' => 'slide', 'data-rel' => 'back'
      - if params[:controller] != 'documents' or params[:action] != 'index'
        = link_to t(:'header.home_button'), root_path, 'data-role' => 'button', 'data-icon' => 'home', 'data-direction' => 'reverse', 'data-transition' => 'slide'
      - else
        = link_to t(:'header.about_button'), about_path, 'data-role' => 'button', 'data-icon' => 'star', 'data-transition' => 'slide'
    
    - unless @no_searchbar
      = render :partial => "layouts/searchbar"