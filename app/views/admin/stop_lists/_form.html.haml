= form_for(@stop_list, url: url, method: method, html: { novalidate: true, class: 'needs-validation' }) do |f|
  .modal-body
    .form-group
      = f.label :language
      = f.text_field :language, class: 'form-control', required: true, autofocus: true
      .invalid-feedback= validation_errors_for(@stop_list, :language, true)

    .form-group
      = f.label :list
      = f.text_area :list, class: 'form-control', required: true, size: 20

  .modal-footer
    %button.btn.btn-secondary{ data: { dismiss: 'modal' } }= t('common.cancel')
    = f.submit class: 'btn btn-primary'
