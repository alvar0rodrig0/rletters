.row.mb-3
  .col-12
    %h1= t('.header')
    %h4.text-muted= t('.subheader')

.row.mb-2
  .col-12
    = link_to new_category_path, class: 'btn btn-secondary float-right ajax-modal' do
      %i.fas.fa-plus
      = t('.add')

.row
  .col-12
    - if Documents::Category.roots.empty?
      %p= t('.no_categories')
    - else
      .dd#category-dd{ data: { target: order_categories_path } }
        %ol.dd-list
          - Documents::Category.roots.each do |r|
            = render partial: 'node', locals: { category: r }
