
.row
  .col-sm-12
    %h1= "#{@model.model_name.human}: #{@item}"

.row
  .col-sm-12
    - unless @model.admin_configuration[:no_edit]
      = link_to admin_edit_item_path(model: params[:model], id: @item.to_param), class: 'btn btn-primary' do
        %span.glyphicon.glyphicon-pencil
        = t('admin.collection_index.edit_button')
    - unless @model.admin_configuration[:no_delete]
      = link_to admin_item_path(model: params[:model], id: @item.to_param), method: :delete, data: { confirm: t('admin.collection_index.delete_confirm') }, class: 'btn btn-danger' do
        %span.glyphicon.glyphicon-remove{ aria: { hidden: 'true' } }
        = t('admin.collection_index.delete_button')

.row.pad-bottom

.row
  .col-sm-12
    %table.table.table-striped.table-condensed
      %tbody
        - @model.column_names.each do |column|
          %tr
            %th= @model.human_attribute_name(column)
            %td= @item.send(column.to_sym)
