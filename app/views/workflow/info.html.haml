- content_for :breadcrumbs do
  %li= link_to t('breadcrumbs.root'), root_path
  %li= link_to t('breadcrumbs.workflow_start'), workflow_start_path
  %li.active= t('breadcrumbs.workflow_info')

.row
  #markdown-info.col-sm-12= render_localized_markdown(@klass.name.underscore[0...-4])

.row
  .col-lg-6.col-lg-offset-6
    .btn-group.btn-group-justified
      = link_to t('.back'), workflow_start_path, class: 'btn btn-default'
      = link_to t('.start'), workflow_activate_path(params[:class]), class: 'btn btn-success'
