.row
  .col-sm-9.col-sm-offset-1
    %h1= t('.header', app_name: ENV['APP_NAME'])
    %h4.text-muted= t('.subheader', app_name: ENV['APP_NAME'])

.row.dashboard
  .col-sm-4.col-sm-offset-1
    .btn-group.btn-group-justified
      = link_to t('.start_button'), workflow_start_path, class: 'btn btn-success'
    %p= t('.start_explanation')
  .col-sm-4
    .btn-group.btn-group-justified
      = link_to t('.fetch_button'), workflow_fetch_path, class: 'btn btn-secondary'
    %p= t('.fetch_explanation')

.row.dashboard
  .col-sm-4.col-sm-offset-3
    .btn-group.btn-group-justified
      = link_to t('.advanced_button'), search_path, class: 'btn btn-secondary'
    %p= t('.advanced_explanation')
