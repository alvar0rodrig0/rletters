.row
  .col-sm-12
    %h4= t('.pending_header')
    - if @pending_tasks.empty?
      %p= t('.no_pending')
    - else
      %table.table.button-table
        %thead
          %tr
            %th.label-cell= t('datasets.analysis_tasks.index.task_column')
            %th.label-cell= Dataset.model_name.human
            %th.label-cell= t('.progress')
        %tbody
          - @pending_tasks.each do |t|
            %tr
              %td.label-cell= t.name
              %td.label-cell= t.dataset.name
              %td.label-cell= t.status_message || t('.no_status')

      .well
        %p= t_md('.pending_cancel_markdown', terminate_url: workflow_fetch_path(terminate: 'true'), email: Admin::Setting.app_email)

.row
  .col-sm-12
    %h4= t('.completed_header')
    - if @finished_tasks.empty?
      %p= t('.no_completed')
    - else
      %table.table.button-table
        %thead
          %tr
            %th.label-cell= t('datasets.analysis_tasks.index.task_column')
            %th.label-cell= Dataset.model_name.human
            %th.label-cell= t('.finished_column')
            %th.button-cell= t('datasets.analysis_tasks.index.results_column')
        %tbody
          - @finished_tasks.each do |t|
            %tr
              %td.label-cell= t.name
              %td.label-cell= t.dataset.name
              %td.label-cell= l t.finished_at, format: :short
              %td.button-cell
                - if t.job_class.download?
                  = link_to t('datasets.analysis_tasks.index.download_button'), dataset_analysis_task_path(t.dataset, t), class: 'btn btn-xs btn-success'
                - else
                  = link_to t('datasets.analysis_tasks.index.view_button'), dataset_analysis_task_path(t.dataset, t, view: 'results'), class: 'btn btn-xs btn-success'
                = link_to t('datasets.analysis_tasks.index.delete_button'), dataset_analysis_task_path(t.dataset, t), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: t('datasets.analysis_tasks.index.delete_confirm') }
