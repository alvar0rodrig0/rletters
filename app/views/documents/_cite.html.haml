%h3= document.title
%p
  = content_tag :span, '', :class => "Z3988", :title => document.openurl_query
  = document.authors
%p
  %em><
    = "#{document.journal}, "
  - unless document.volume.empty?
    == Vol. #{document.volume},
  - unless document.number.empty?
    == No. #{document.number}
  - unless document.year.empty?
    == (#{document.year}),
  - unless document.pages.empty?
    == pp. #{document.pages}
