- if params[:q] or params[:fq] or params[:precise]
  - title "Search Results"

.rightcol
  - unless params[:fq].blank?
    .rightbox
      .boxheader
        %h2 Active Filters
      
      %p.selectedfacets
        = render_selected_facets(params)
    
  - if @facets
    .rightbox
      .boxheader
        %h2 Filter Results
      
      %ul.facetcategories
        - get_facets.each do |facet|
          %li
            %p.header
              %a{:href => '#'}
                %span.icon
                = facet[:name]
            %div.collapse
              %p= render_solr_facet(params, facet, @facets[facet[:key]])
      
      = content_for :javascripts do
        = javascript_tag "$(document).ready(function() { $('ul.facetcategories').accordion({ icons: false, collapsible: true, active: false }); });"
      

%ul.docs
  - for doc in @documents
    %li
      = render :partial => "cite_links", :locals => { :document => doc }

.pagination
  = will_paginate @documents

.clearboth
