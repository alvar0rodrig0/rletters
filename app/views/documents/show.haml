%h2 Document Information
  
%p
  %strong Title: 
  = @document.title
  %br
  %strong Authors:
  = @document.authors
  
%p
  %strong Citation Information:
  = render :partial => "citation", :locals => { :document => @document }

%p
  %strong PDF:
  %a{:href => @document.doi_url}== doi:#{@document.doi}

%p
  %strong More:
  = link_to 'Term Frequencies', terms_document_path(@document)
  = link_to 'Full Document Text', text_document_path(@document)
