- title t(:'help.header')

- string = t params[:id], :app_name => APP_CONFIG['app_name']
- if params[:id].to_s.end_with? '_markdown'
  = raw(Maruku.new(string).to_html)
- else
  %p= string

%p= link_to t(:'help.close_button'), ':back', 'data-role' => 'button', 'data-rel' => 'back', 'data-theme' => 'b'
