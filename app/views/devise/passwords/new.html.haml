- content_for :breadcrumbs do
  %li.breadcrumb-item= link_to t('breadcrumbs.root'), root_path
  %li.breadcrumb-item.active= t('breadcrumbs.users_passwords_new')

.row
  .col-12
    %h1= t('.header')
    %h4.text-muted= t('.subheader')

.row
  .col-6
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { novalidate: true, class: 'needs-validation' }) do |f|
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control', required: true, autofocus: true
        .invalid-feedback= validation_errors_for(resource, :email, true)

      = f.submit t('.submit')
