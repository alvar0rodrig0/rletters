- data = JSON.load(@task.json)

.row
  .col-md-8
    %h1== #{Dataset.model_name.human}: #{@dataset.name}
    %h4.text-muted= t('term_dates_job.subheader', term: data['term'])

  .col-md-4.job-header-button
    = link_to t('common.download_csv'), task_download_path(task: @task, content_type: 'text/csv'), class: 'btn btn-secondary'

.row
  .col-xs-12
    %hr

    %script{ type: 'text/javascript' }
      == window.json_data = '#{@task_presenter.json_escaped}';
    .term_dates_graph

    %hr

    .term_dates_table
