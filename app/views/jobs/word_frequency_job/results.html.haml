- data = JSON.parse(@task.json)

.row
  .col-12.col-md-8
    %h1== #{Dataset.model_name.human}: #{@dataset.name}
    %h4.text-muted= t('word_frequency_job.subheader')

  .col-12.col-md-4.job-header-button
    = link_to t('common.download_csv'), task_download_path(task: @task, content_type: 'text/csv'), class: 'btn btn-secondary'

.row.mt-3
  .col-12
    %hr

    %h5.mb-4= t('word_frequency_job.cloud_header')

    .word-cloud{ data: { word_cloud: data['word_cloud_words'].to_json } }
      = render partial: 'jobs/word_cloud/controls'

= render partial: 'jobs/d3_svg/form'
