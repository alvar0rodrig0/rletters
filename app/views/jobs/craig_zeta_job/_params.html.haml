.row
  .col-12.col-md-6
    = form_for :job_params, url: dataset_tasks_path(@dataset, class: 'CraigZetaJob'), method: :post do |f|
      -# Pass through the other_datasets parameter that we've received from
      -# the page before
      = f.hidden_field :other_datasets, :multiple => true, value: params[:job_params][:other_datasets]

      .card.card-body.mb-3
        %h5.card-title= t('craig_zeta_job.options_label')

        = render partial: 'jobs/word_cloud/params', locals: { f: f }

      .float-right
        = link_to(t('common.cancel'), @dataset, class: 'btn btn-secondary')
        = f.submit class: 'btn btn-primary'
