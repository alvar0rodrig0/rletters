
%ul.button-group
  %li= link_to t('.query'), query_libraries_path, data: { reveal_id: 'query-modal', reveal_ajax: 'true' }, class: 'button secondary small'
  %li= link_to t('.add_new'), new_library_path, data: { reveal_id: 'new-modal', reveal_ajax: 'true' }, class: 'button secondary small'

%table
  %thead
    %tr
      %th= t('.name_column')
      %th
  %tbody
    - @libraries.each do |library|
      %tr
        %td= library.name
        %td
          = link_to t('.edit_button'), edit_library_path(library), data: { reveal_id: 'edit-modal', reveal_ajax: 'true' }, class: 'button secondary tiny'
          = link_to t('.delete_button'), library_path(library), method: 'delete', data: { confirm: t('.delete_confirm') }, class: 'button alert tiny'
    - if @libraries.count == 0
      %tr
        %td= t('.no_libraries')
        %td

#query-modal.reveal-modal= t('.loading')
#new-modal.reveal-modal= t('.loading')
#edit-modal.reveal-modal= t('.loading')
