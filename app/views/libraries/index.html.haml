
%ul.button-group
  %li= link_to t('.query'), query_libraries_path, data: { reveal_id: 'query-modal', reveal_ajax: 'true' }, class: 'button secondary small'
  %li= link_to t('.add_new'), new_library_path, data: { reveal_id: 'new-modal', reveal_ajax: 'true' }, class: 'button secondary small'

%table
  %thead
    %tr
      %th Library Name
      %th
  %tbody
    - @libraries.each do |library|
      %tr
        %td= library.name
        %td
          = link_to 'Edit', edit_library_path(library), data: { reveal_id: 'edit-modal', reveal_ajax: 'true' }, class: 'button secondary tiny'
          = link_to 'Delete', library_path(library), method: 'delete', data: { confirm: 'Are you sure?' }, class: 'button alert tiny'
    - if @libraries.count == 0
      %tr
        %td No libraries found
        %td

