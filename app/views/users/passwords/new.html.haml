- content_for :breadcrumbs do
  %li= link_to t('breadcrumbs.root'), root_path
  %li.current= link_to t('breadcrumbs.users_passwords_new'), new_user_password_path

%header
  %section
    %h3= t('.header')
    %h5.subheader= t('.subheader')

.row
  .large-6.columns
    = simple_form_for(:user, url: user_password_path, method: :post) do |f|
      = f.input :email
      = f.button :submit, t('.submit')
