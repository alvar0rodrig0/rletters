- content_for :breadcrumbs do
  %li= link_to t('breadcrumbs.root'), root_path
  %li.current= link_to t('breadcrumbs.users_passwords_edit'), edit_user_password_path

%header
  %section
    %h3= t('.header')
    %h5.subheader= t('.subheader')

.row
  .large-6.columns
    = simple_form_for(:user, url: user_password_path, method: :put) do |f|
      = f.hidden_field :reset_password_token

      = f.input :password
      = f.input :password_confirmation
      = f.button :submit, t('.submit')
